<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        android:id="@+id/Label_Latitude"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:id="@+id/txtLatitudeValue"
        android:textSize="20sp"
        android:layout_above="@+id/txtLongitudeValue"
        android:layout_alignLeft="@+id/txtLongitudeValue"
        android:layout_alignStart="@+id/txtLongitudeValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: "
        android:id="@+id/Label_Longitude"
        android:textSize="20sp"
        android:layout_below="@+id/Label_Latitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:id="@+id/txtLongitudeValue"
        android:textSize="20sp"
        android:layout_alignTop="@+id/Label_Longitude"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time :"
        android:id="@+id/Label_Time"
        android:textSize="22dp"
        android:layout_below="@+id/Label_Longitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:id="@+id/TimeValue"
        android:layout_alignBottom="@+id/Label_Time"
        android:layout_alignRight="@+id/txtLongitudeValue"
        android:layout_alignEnd="@+id/txtLongitudeValue"
        android:textSize="21sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imie :"
        android:id="@+id/LabelImei"
        android:textSize="21sp"
        android:layout_below="@+id/Label_Time"
        android:layout_alignRight="@+id/Label_Time"
        android:layout_alignEnd="@+id/Label_Time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value"
        android:id="@+id/ImeiValue"
        android:layout_alignTop="@+id/LabelImei"
        android:layout_centerHorizontal="true"
        android:textSize="21sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/Label_Longitude"
        android:layout_alignEnd="@+id/Label_Longitude"
        android:onClick="startBtnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/ImeiValue"
        android:layout_alignStart="@+id/ImeiValue"
        android:onClick="stopBtnClick" />
</RelativeLayout>
